---
import { getCollection } from "astro:content";
import FoundationsCard from "./FoundationsCard.astro";
const foundations = await getCollection("foundations");
---

<section class="container" id="foundations">
  <header>
    <h2><span>Our foundations</span></h2>
    <p>
      These foundations create an environment that encourages innovation,
      creativity, and personal growth.
    </p>
  </header>
  <ul>
    {
      foundations.map((item) => (
        <li>
          <FoundationsCard
            title={item.data.title}
            description={item.data.description}
            slug={item.slug}
          />
        </li>
      ))
    }
  </ul>
</section>

<style>
  h2 {
    white-space: nowrap;
  }

  ul {
    counter-reset: counter;
  }
</style>
