---
import { getCollection, render } from "astro:content";
import Base from "../../layouts/Base.astro";

export async function getStaticPaths() {
  const team = await getCollection("team");
  return team.map((member) => ({
    params: { id: member.id },
    props: { member },
  }));
}

const { member } = Astro.props;
const { Content } = await render(member);
const base = import.meta.env.BASE_URL;
---

<Base title={member.data.name}>
  <article class="container team-detail">
    <header>
      <div class="profile-header">
        <div class="profile-image">
          <img
            src={member.data.pic.src}
            alt={`Profile picture of ${member.data.name}`}
            width="300"
            height="300"
          />
        </div>
        <div class="profile-info">
          <h1><span>{member.data.name}</span></h1>
          <p class="function">{member.data.function}</p>
        </div>
      </div>
    </header>

    <div class="bio-content">
      <h2>Biography</h2>
      <p>{member.data.bio}</p>
      <div class="md">
        <Content />
      </div>
    </div>

    <div class="back-link">
      <a href={`${base}#team`}>‚Üê Back to team</a>
    </div>
  </article>
</Base>

<style>
  .team-detail {
    max-width: var(--max-width-text);
    margin: 0 auto;
  }

  header {
    margin-bottom: var(--sp-xl);
  }

  .profile-header {
    display: grid;
    gap: var(--sp-l);
    align-items: center;
  }

  .profile-image {
    width: 100%;
    max-width: 300px;
    margin: 0 auto;
  }

  .profile-image img {
    width: 100%;
    height: auto;
    border-radius: var(--br-l);
    border: solid 2px var(--color-text);
    border-bottom-width: 8px;
    filter: grayscale(100%) brightness(110%);
  }

  .profile-info {
    text-align: center;
  }

  h1 {
    margin-bottom: var(--sp-s);
  }

  .function {
    font-size: var(--fs-1);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0;
  }

  .bio-content {
    line-height: 1.6;
    margin-bottom: var(--sp-xl);
  }

  .bio-content h2 {
    margin-bottom: var(--sp-m);
  }

  .bio-content p {
    margin-bottom: var(--sp-m);
  }

  .back-link {
    text-align: center;
    margin-top: var(--sp-xl);
    padding-top: var(--sp-xl);
    border-top: solid 1px var(--color-text);
  }

  .back-link a {
    color: var(--color-text);
    text-decoration: none;
    padding: var(--sp-s) var(--sp-m);
    border: solid 2px var(--color-text);
    border-radius: var(--br-m);
    display: inline-block;
    transition: all 0.2s ease;
  }

  .back-link a:hover {
    background-color: var(--color-primary);
    transform: translateY(-2px);
  }

  @media (min-width: 768px) {
    .profile-header {
      grid-template-columns: 300px 1fr;
      text-align: left;
    }

    .profile-info {
      text-align: left;
    }

    .profile-image {
      margin: 0;
    }
  }
</style>
